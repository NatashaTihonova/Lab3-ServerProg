<div id="testimonials" class="parallax section db parallax-off" style="background-image:url('uploads/parallax_03.jpg');">
    <div class="container">
        <div class="section-title text-center">
            <h3>Testimonials</h3>
            <p class="lead">We thanks for all our awesome testimonials! There are hundreds of our happy customers! <br>Let's see what others say about GoodWEB Solutions website template!</p>
        </div><!-- end title -->

        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="testi-carousel owl-carousel owl-theme">
                    @foreach (var testimonial in testimonials.items)
                    {
                        <div class="testimonial clearfix">
                            <div class="desc">
                                <h3><i class="fa fa-quote-left"></i> @testimonial.Title</h3>
                                <p class="lead">@testimonial.Text</p>
                            </div>
                            <div class="testi-meta">
                                <img src=@testimonial.ImageURL alt="" class="img-responsive alignleft">
                                <h4>@testimonial.Name <small>- @testimonial.Profession</small></h4>
                            </div>
                            <!-- end testi-meta -->
                        </div>
                    }
                </div><!-- end carousel -->
            </div><!-- end col -->
        </div><!-- end row -->

        <hr class="hr1">

        <div class="row logos">
            @foreach (var logo in logos.items)
            {
                <div class="col-md-2 col-sm-2 col-xs-6 wow fadeInUp">
                    <a href="#"><img src=@logo.LogoURL alt="" class="img-repsonsive"></a>
                </div>
            }
        </div><!-- end row -->

    </div><!-- end container -->
