<div class="banner-area banner-bg-1">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="banner">
                    <h2>Pricing</h2>
                    <ul class="page-title-link">
                        <li><a asp-page="./Index">Home</a></li>
                        <li><a href="#">Pricing</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="about" class="section wb">
    <div class="container">
        <div class="section-title text-center">
            <h3>Pricing</h3>
            <p class="lead">We thanks for all our awesome testimonials! There are hundreds of our happy customers! <br>Let's see what others say about GoodWEB Solutions website template!</p>
        </div><!-- end title -->

        <div class="row">

            @foreach (var price in prices.items)
            {
                <div class="col-md-4 col-sm-6">
                    <div class="pricingTable">
                        <div class="pricingTable-header">
                            <h3 class="title">@price.Title</h3>
                            <span class="sub-title">@price.SubTitle</span>
                            <span class="year">Pay only <br>@price.Money</span>
                        </div>
                        <div class="price-value">
                            <div class="value">
                                <span class="currency">@price.Currency</span>
                                <span class="amount">@price.Amount<span>99</span></span>
                                <span class="month">@price.Month</span>
                            </div>
                        </div>
                        <ul class="pricing-content">
                            @foreach (var content in price.ContentAbl)
                            {
                                <li>@content</li>
                            }
                            @foreach (var content in price.ContentDis)
                            {
                                <li class="disable">@content</li>
                            }
                        </ul>
                        <a href="#" class="pricingTable-signup">Select the plan </a>
                    </div>
                </div>
            }
