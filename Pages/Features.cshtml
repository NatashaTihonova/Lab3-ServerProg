@page
@model Lab._3.Models.AllModels
@{
    var testimonials = new Lab._3.Models.TestimonialModelcs();
    var logos = new Lab._3.Models.LogosModel();
    var features = new Lab._3.Models.FeaturesModel();
}

<div class="banner-area banner-bg-1">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="banner">
                    <h2>Features</h2>
                    <ul class="page-title-link">
                        <li><a asp-page="./Index">Home</a></li>
                        <li><a href="#">Features</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="features" class="section wb">
    <div class="container">
        <div class="section-title text-center">
            <h3>Features & Overviews</h3>
            <p class="lead">Lorem Ipsum dolroin gravida nibh vel velit auctor aliquet. Aenean sollicitudin, <br>lorem quis bibendum auctor, nisi elit consequat ipsum, nec sagittis sem!</p>
        </div><!-- end title -->

        <div class="row">
            <div class="col-md-4 col-sm-6 col-xs-12">
                <ul class="features-left">
                    @foreach (var feature in features.itemsLeft)
                    {
                        <li class="wow fadeInLeft" data-wow-duration="1s" data-wow-delay="0.2s">
                            <i class="@feature.Class"></i>
                            <div class="fl-inner">
                                <h4>@feature.Title</h4>
                                <p>@feature.Text</p>
                            </div>
                        </li>
                    }
                </ul>
            </div>
            <div class="col-md-4 hidden-xs hidden-sm">
                <img src="uploads/ipad.png" class="img-center img-responsive" alt="">
            </div>
            <div class="col-md-4 col-sm-6 col-xs-12">
                <ul class="features-right">
                    @foreach (var feature in features.itemsRight)
                    {
                        <li class="wow fadeInRight" data-wow-duration="1s" data-wow-delay="0.2s">
                            <i class="@feature.Class"></i>
                            <div class="fr-inner">
                                <h4>@feature.Title</h4>
                                <p>@feature.Text</p>
                            </div>
                        </li>
                    }
                </ul>
            </div><!-- end col -->
        </div><!-- end row -->

        <hr class="hr1">

        <div class="row text-center">
            @foreach (var feature in features.itemsServices)
            {
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="service-widget">
                        <div class="post-media wow fadeIn">
                            <a href=@feature.ImageURL data-rel="prettyPhoto[gal]" class="hoverbutton global-radius"><i class="flaticon-unlink"></i></a>
                            <img src=@feature.ImageURL alt="" class="img-responsive img-rounded">
                        </div>
                        <h3>@feature.Title</h3>
                        <p>@feature.Text</p>
                    </div><!-- end service -->
                </div><!-- end col -->
            }
        </div><!-- end row -->
    </div><!-- end container -->
</div><!-- end section -->

<div id="testimonials" class="parallax section db parallax-off" style="background-image:url('uploads/parallax_03.jpg');">
    <div class="container">
        <div class="section-title text-center">
            <h3>Testimonials</h3>
            <p class="lead">We thanks for all our awesome testimonials! There are hundreds of our happy customers! <br>Let's see what others say about GoodWEB Solutions website template!</p>
        </div><!-- end title -->

        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="testi-carousel owl-carousel owl-theme">
                    @foreach (var testimonial in testimonials.items)
                    {
                        <div class="testimonial clearfix">
                            <div class="desc">
                                <h3><i class="fa fa-quote-left"></i> @testimonial.Title</h3>
                                <p class="lead">@testimonial.Text</p>
                            </div>
                            <div class="testi-meta">
                                <img src=@testimonial.ImageURL alt="" class="img-responsive alignleft">
                                <h4>@testimonial.Name <small>- @testimonial.Profession</small></h4>
                            </div>
                            <!-- end testi-meta -->
                        </div>
                    }
                </div><!-- end carousel -->
            </div><!-- end col -->
        </div><!-- end row -->

        <hr class="hr1">

        <div class="row logos">
            @foreach (var logo in logos.items)
            {
                <div class="col-md-2 col-sm-2 col-xs-6 wow fadeInUp">
                    <a href="#"><img src=@logo.LogoURL alt="" class="img-repsonsive"></a>
                </div>
            }
        </div><!-- end row -->

    </div><!-- end container -->
</div><!-- end section -->