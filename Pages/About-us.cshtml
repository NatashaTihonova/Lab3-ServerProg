@page
@model Lab._3.Models.AllModels
@{
    var testimonials = new Lab._3.Models.TestimonialModelcs();
    var logos = new Lab._3.Models.LogosModel();
    var abouts = new Lab._3.Models.AboutModel();
}

<div class="banner-area banner-bg-1">
    <div class="container">
        <div class="row">
            <div class="col-md-12">
                <div class="banner">
                    <h2>About Us</h2>
                    <ul class="page-title-link">
                        <li><a asp-page="./Index">Home</a></li>
                        <li><a href="#">About Us</a></li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>


<div id="about" class="section wb">
    <div class="container">
        @for (int i = 0; i < abouts.items.Count; i++)
        {
            <div class="row">
                @if (i % 2 != 0)
                {
                    <div class="col-md-6">
                        <div class="post-media wow fadeIn">
                            <img src="@abouts.items[i].ImageURL" alt="" class="img-responsive img-rounded">
                            @if (abouts.items[i].AHref != null)
                            {
                                <a href="@abouts.items[i].AHref" data-rel="prettyPhoto[gal]" class="playbutton"><i class="flaticon-play-button"></i></a>
                            }
                        </div><!-- end media -->
                    </div><!-- end col -->
                }
                <div class="col-md-6">
                    <div class="message-box">
                        <h4>@abouts.items[i].Title</h4>
                        <h2>@abouts.items[i].SubTitle</h2>
                        <p class="lead">@abouts.items[i].TextLead</p>

                        <p>@abouts.items[i].Text</p>

                        <a asp-page="./Services" class="btn btn-light btn-radius btn-brd grd1">Learn More</a>
                    </div><!-- end messagebox -->
                </div><!-- end col -->

                @if (i % 2 == 0)
                {
                    <div class="col-md-6">
                        <div class="post-media wow fadeIn">
                            <img src="@abouts.items[i].ImageURL" alt="" class="img-responsive img-rounded">
                            @if (abouts.items[i].AHref != null)
                            {
                                <a href="@abouts.items[i].AHref" data-rel="prettyPhoto[gal]" class="playbutton"><i class="flaticon-play-button"></i></a>
                            }
                        </div><!-- end media -->
                    </div><!-- end col -->
                }
            </div><!-- end row -->

            <hr class="hr1">
        }
    </div><!-- end container -->
</div><!-- end section -->

<div id="testimonials" class="parallax section db parallax-off" style="background-image:url('uploads/parallax_03.jpg');">
    <div class="container">
        <div class="section-title text-center">
            <h3>Testimonials</h3>
            <p class="lead">We thanks for all our awesome testimonials! There are hundreds of our happy customers! <br>Let's see what others say about GoodWEB Solutions website template!</p>
        </div><!-- end title -->

        <div class="row">
            <div class="col-md-12 col-sm-12">
                <div class="testi-carousel owl-carousel owl-theme">
                    @foreach (var testimonial in testimonials.items)
                    {
                        <div class="testimonial clearfix">
                            <div class="desc">
                                <h3><i class="fa fa-quote-left"></i> @testimonial.Title</h3>
                                <p class="lead">@testimonial.Text</p>
                            </div>
                            <div class="testi-meta">
                                <img src=@testimonial.ImageURL alt="" class="img-responsive alignleft">
                                <h4>@testimonial.Name <small>- @testimonial.Profession</small></h4>
                            </div>
                            <!-- end testi-meta -->
                        </div>
                    }
                </div><!-- end carousel -->
            </div><!-- end col -->
        </div><!-- end row -->

        <hr class="hr1">

        <div class="row logos">
            @foreach (var logo in logos.items)
            {
                <div class="col-md-2 col-sm-2 col-xs-6 wow fadeInUp">
                    <a href="#"><img src=@logo.LogoURL alt="" class="img-repsonsive"></a>
                </div>
            }
        </div><!-- end row -->

    </div><!-- end container -->
</div><!-- end section -->